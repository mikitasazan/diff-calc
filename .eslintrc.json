{
  "parserOptions": {
    "ecmaVersion": 2022,
    "sourceType": "module"
  },
  "rules": {
    "semi": ["error", "never"],
    "quotes": ["error", "single"],
    "no-console": "off",
    "no-unused-vars": ["error", { "args": "none" }],
    "@stylistic/indent": ["error", 2],
    "@stylistic/arrow-parens": ["error", "as-needed", { "requireForBlockBody": true }],
    "@stylistic/object-curly-spacing": ["error", "always"],
    "@stylistic/no-trailing-spaces": "error"
  },
  "env": {
    "node": true,
    "es2022": true,
    "jest": true
  },
  "plugins": ["@stylistic"]
}
